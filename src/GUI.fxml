<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUIController">
    <children>
        <TextField fx:id="totalPlayersText" alignment="CENTER" layoutX="425.0" layoutY="248.0" onAction="#getTotalPlayers" />
        <Label alignment="CENTER" layoutX="423.0" layoutY="231.0" prefHeight="17.0" prefWidth="161.0" text="Total Number of Players" />
        <Label alignment="CENTER" layoutX="346.0" layoutY="51.0" prefHeight="56.0" prefWidth="311.0" text="Mexican Train">
