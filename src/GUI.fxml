        <Label layoutX="417.0" layoutY="306.0" text="Total Number of Human Players" />
        <Label layoutX="411.0" layoutY="390.0" text="Total Number of Computer Players" />
        <TextField fx:id="humPlayersText" alignment="CENTER" layoutX="423.0" layoutY="323.0" onAction="#getHumPlayers" />
        <TextField fx:id="comPlayersText" alignment="CENTER" layoutX="424.0" layoutY="407.0" onAction="#getComPlayers" />
